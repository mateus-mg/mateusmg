# Configurações de cache para melhorar o LCP e carregamento geral

# Script de otimização - prioridade crítica
/js/optimizer.js
  Cache-Control: public, max-age=86400
  X-Content-Type-Options: nosniff
  Priority: critical
  
# Imagem principal do header
/img/webp/header-bg.webp
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff
  
# CSS e JS principais
/*.css
  Cache-Control: public, max-age=86400
/js/*.js
  Cache-Control: public, max-age=86400

# Outras imagens otimizadas
/img/webp/*
  Cache-Control: public, max-age=31536000, immutable
  
# Cache para recursos de terceiros e fontes
/fonts/*
  Cache-Control: public, max-age=31536000, immutable
  
# PDF files
/pdf/*
  Cache-Control: public, max-age=2592000
  
# Cabeçalhos para otimização geral do site
/*
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://kit.fontawesome.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com https://ka-f.fontawesome.com; img-src 'self' data:;
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  Cache-Control: public, max-age=3600