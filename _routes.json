{
    "version": 1,
    "include": [
        "/*"
    ],
    "exclude": [
        "/img/*",
        "/css/*",
        "/js/*",
        "/pdf/*",
        "/i18n/*"
    ],
    "routes": [
        {
            "handle": "static"
        },
        {
            "src": "^/index.html$",
            "dest": "/",
            "status": 301
        },
        {
            "src": "^/(.*).html$",
            "dest": "/$1.html"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": ".*",
            "dest": "/404.html",
            "status": 404
        }
    ]
}