# Arquivo .htaccess para configuração do site de portfólio

# Configurações de segurança
<IfModule mod_headers.c>
    # Proteção contra XSS e clickjacking
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-Content-Type-Options "nosniff"
    
    # Política de segurança de conteúdo básica
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://kit.fontawesome.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com https://ka-f.fontawesome.com; img-src 'self' data:;"
    
    # Configurações de segurança para SSL
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
</IfModule>

# Habilitar compressão GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json application/xml
    
    # Remover bugs de navegadores antigos
    BrowserMatch ^Mozilla/4 gzip-only-text/html
    BrowserMatch ^Mozilla/4\.0[678] no-gzip
    BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
</IfModule>

# Cache de arquivos
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Cache de imagens por 1 ano
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # Cache de arquivos CSS e JavaScript por 1 mês
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    
    # Cache de fontes por 1 ano
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    ExpiresByType application/vnd.ms-fontobject "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    
    # Cache padrão para outros tipos
    ExpiresDefault "access plus 1 week"
</IfModule>

# Personalização de páginas de erro
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# Reescrever URLs para ter URLs amigáveis
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Detectar se o Cloudflare já está redirecionando para HTTPS
    RewriteCond %{HTTP:CF-Visitor} !'"scheme":"https"'
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Remover www e forçar https
    RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
    RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
    
    # Redirecionar index.html para raiz
    RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /index\.html\ HTTP/
    RewriteRule ^index\.html$ / [R=301,L]
</IfModule>

# Proteger contra hotlinking de imagens - atualizado com o domínio real
<IfModule mod_rewrite.c>
  RewriteEngine on
  RewriteCond %{HTTP_REFERER} !^$
  RewriteCond %{HTTP_REFERER} !^https://(www\.)?mateusmg\.pages\.dev [NC]
  RewriteCond %{HTTP_REFERER} !^https://mateusmg\.pages\.dev [NC]
  RewriteRule \.(jpg|jpeg|png|gif|webp)$ - [NC,F,L]
</IfModule>

# Melhorar a performance desabilitando ETag
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# Prevenir acesso a arquivos/diretórios sensíveis
<FilesMatch "(^\.ht|\.json|composer\.json|package\.json|\.git|\.env)">
    Require all denied
</FilesMatch>

# Desabilitar listagem de diretórios
Options -Indexes